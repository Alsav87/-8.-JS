ЗАДАНИЕ 6.

function check(a) {
  for (var q=1; q<a.length; ++q) {
    if (a[q] === a[q*1]) {
      return false;
    }
  }
  
  return true;
}

console.log(check([3, 1, 10, 12, 15, 20, 1 ]));

ЗАДАНИЕ 7.

let arr = [1, 4, 0, null, 2, 0, 98, "string"];
let zerocount = 0;
let numbercount = 0;
let evencount = 0;
let oddcount = 0;
for (let i = 0; i < arr.length; i++) {
    if (typeof arr[i] === "number" || !isNaN(arr[i])) {
        numbercount += 1;
        if (arr[i] === 0) {
            zerocount += 1;
        } else if (arr[i] % 2 === 0) {
            evencount += 1;
        } else {
            oddcount += 1;
        }
    }
}
console.log(`В массиве: ${numbercount} цифр, ${zerocount} нулей, ${evencount} чётных, ${oddcount} нечётных`);

ЗАДАНИЕ 8.

let fruits = new Map([
    ["apple", "green"],
    ["strawberry", "red"],
    ["blueberry", "blue"]
]);
fruits.forEach((value, key) => {
    console.log(`${key} - x = ${value} - y`);
});


ЗАДАНИЕ 9


let arr = [4, 8, 48, 0, 1, 'null', 6, 1.5, 24];
function getArraysOddAndEvenCount(arr) {
    let zerocount = 0;
    let numbercount = 0;
    let evencount = 0;
    let oddcount = 0;
    for (let i = 0; i < arr.length; i++) {
        if (typeof arr[i] === "number" ||!isNaN(arr[i])) {
            numbercount += 1;
            if (arr[i] === 0) {
                zerocount += 1;
            } else if (arr[i] % 2 === 0) {
                evencount += 1;
            } else {
                oddcount += 1;
            }
        }
    }
    
    console.log(`В массиве ${numbercount} цифр, ${zerocount} нулей, ${evencount} чётных, ${oddcount} нечётных`);
}
   getArraysOddAndEvenCount(arr);




 
 
